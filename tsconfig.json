/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitOverride": true,
        "noPropertyAccessFromIndexSignature": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "paths": {
            "my-schematics": [
                "./dist/my-schematics"
            ],
            "@polity-ui/*": [
                "src/polity-ui/*"
            ],
            "@polity-navigation/*": [
                "src/polity-navigation/*"
            ],
            "@polity-signal-store/*": [
                "src/polity-signal-store/*"
            ],
            "@polity-styles-global/*": [
                "src/polity-styles-global/*"
            ],
            "@polity-profile/*": [
                "src/app/features/profile/*"
            ],
            "@polity-groups/*": [
                "src/app/features/groups/*"
            ],
            "@polity-office/*": [
                "src/app/features/office/*"
            ],
            "@polity-assistant/*": [
                "src/app/features/search/*"
            ],
            "@polity-assistant/*": [
                "src/app/features/assistant/*"
            ],
            "@polity-event/*": [
                "src/app/features/event/*"
            ],
            "@polity-amendments/*": [
                "src/app/features/amendments/*"
            ]
        },
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2022",
        "module": "ES2022",
        "useDefineForClassFields": false,
        "resolveJsonModule": true,
        "lib": [
            "ES2022",
            "dom"
        ]
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    },
    "exclude": [
        "cypress.config.ts",
        "cypress",
        "node_modules"
    ]
}
